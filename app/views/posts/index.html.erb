<h1>Welcome to posts index page</h1>
<%= render partial: 'users/user_card', locals: { user: @user } %>

<% @posts.each_with_index do |post, index| %>
  <%= render partial: 'post', locals: { post: post, index: index } %>
  
  <section class="post_card comments_card">
    <% recent_comments = post.recent_comments %>
    <%= render partial: 'comments', locals: { comments: recent_comments } %>
  </section>
<% end %>
<div class="button_box">  
  <button type="button">Pagination</button>  
</div>
