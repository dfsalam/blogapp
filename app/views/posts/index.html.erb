<h2>Welcome to posts index page</h2>
<section>
  <img src="<%= @user.photo %>" alt="User image">
  <h2><%= @user.name %></h2>
  <h3>Number of posts: <%= @user.posts_counter %></h3>
</section>
<section> 
  <% @posts.each_with_index do |post, index| %>
    <section>
      <h2>Post #<%= index+1 %></h2>
      <p><%= post.text%> </p>
      <div>
        <h4>Comments: <%= post.comments_counter%></h4>
        <h4>Likes: <%= post.likes_counter%></h4>
      </div>
    </section>
    <section>
      <% comments = post.recent_comments %>
      <% comments.each do |comment| %>
        <% user = User.find(comment.author_id) %>
        <h3><%= user.name %>: <%= comment.text%></h3>
      <% end %>
    </section>
  <% end %>
</section>