<section>
  <img src="<%= @user.photo %>" alt="User image">
  <h2><%= @user.name %></h2>
  <h3>Number of posts: <%= @user.posts_counter %></h3>
</section>
<section> 
  <h2>Bio</h2>
  <p> <%= @user.bio %></p>
</section>
<section> 
  <% @posts.each_with_index do |post, index| %>
    <h2>Post #<%= index+1 %></h2>
    <p><%= post.text%> </p>
    <div>
      <h4>Comments: <%= post.comments_counter%></h4>
      <h4>Likes: <%= post.likes_counter%></h4>
    </div>
  <% end %>
</section>

