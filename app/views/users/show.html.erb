<h1>Welcome to users show page</h1>
<%= render partial: 'users/user_card', locals: { user: @user } %>
<section class="column"> 
  <h2 class="margin">Bio</h2>
  <p class="margin"> <%= @user.bio %></p>
</section>
<% @posts.each_with_index do |post, index| %>
  <%= render partial: 'posts/post', locals: { post: post, index: index } %>
<% end %>
<div class="button_box">
  <%= link_to user_posts_path(@user.id) do %>
    <button type="button">See all post</button>
  <% end %>
  <%= link_to new_post_path(@user.id) do %>
    <button type="button">Create new post</button>
  <% end %>
</div>


